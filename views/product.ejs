<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@600;700&family=Work+Sans:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
    <title>Supermarket App</title>
</head>
<body>
<%- include('partials/header') %>

    <div class="container" style="max-width: 720px;">
        <div class="text-center mb-3">
            <p class="mb-1">Welcome, <%= user.username %> (<%= user.role %>)</p>
            <h2 class="mb-3">Product Details</h2>
        </div>

        <% if (product) { %> <!-- Check if product data exists -->
            <div class="card mb-3 text-center">
                <div class="card-body">
                    <h5 class="card-title mb-3"><%= product.productName %></h5>
                    <img src="../images/<%= product.image %>" class="img-fluid mb-3" style="max-height: 220px; object-fit: contain;" alt="<%= product.productName %>">
                    <p class="mb-2"><strong>Category:</strong> <%= product.category || 'Uncategorized' %></p>
                    <p class="mb-2"><strong>Quantity:</strong> <%= product.quantity %></p>
                    <p class="mb-3"><strong>Price:</strong> $<%= product.price.toFixed(2) %></p>

                    <% if (user.role !== "admin") { %>
                    <form action="/add-to-cart" method="POST" class="row g-2 justify-content-center">
                        <input type="hidden" name="productId" value="<%= product.id %>">
                        <div class="col-auto">
                            <label class="form-label" for="qty">Quantity:</label>
                            <input type="number" id="qty" name="qty" min="1" value="1" class="form-control" required>
                        </div>
                        <div class="col-auto align-self-end">
                            <button type="submit" class="btn btn-primary">Add to cart</button>
                        </div>
                    </form>
                    <% } %>
                </div>
            </div>
        <% } else { %>
            <p class="text-center">No product found.</p>
        <% } %>

        <div class="d-flex justify-content-center mt-3">
            <% if (user.role === "admin") { %>
              <a href="/inventory" class="btn btn-secondary btn-lg">Back to Inventory</a>
            <% } else { %>
              <a href="/shopping" class="btn btn-secondary btn-lg">Back to Shopping</a>
            <% } %>
        </div>
    </div>
    
</body>
</html>
