<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Purchases</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@600;700&family=Work+Sans:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body>
<%- include('partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">All Purchase History</h2>
        <div class="text-muted">Admin view</div>
    </div>

    <form method="GET" action="/admin/history" class="row g-2 align-items-end mb-3">
        <% const sortValue = (typeof sort !== 'undefined' && sort) ? sort : 'date-desc'; %>
        <% const searchValue = (typeof search !== 'undefined' && search) ? search : ''; %>
        <div class="col-md-4">
            <label class="form-label">Search user</label>
            <input type="text" name="q" class="form-control" value="<%= searchValue %>" placeholder="Username, email, or ID">
        </div>
        <div class="col-md-3">
            <label class="form-label">Sort by</label>
            <select name="sort" class="form-select">
                <option value="date-desc" <%= sortValue === 'date-desc' ? 'selected' : '' %>>Date: Newest</option>
                <option value="date-asc" <%= sortValue === 'date-asc' ? 'selected' : '' %>>Date: Oldest</option>
                <option value="amount-desc" <%= sortValue === 'amount-desc' ? 'selected' : '' %>>Amount: High to Low</option>
                <option value="amount-asc" <%= sortValue === 'amount-asc' ? 'selected' : '' %>>Amount: Low to High</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-primary">Apply</button>
        </div>
    </form>

    <% if (!purchases || purchases.length === 0) { %>
        <div class="alert alert-info">No purchases recorded yet.</div>
    <% } else { %>
        <% purchases.forEach(purchase => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div>
                            <div class="fw-bold">User:</div>
                            <% if (purchase.user && purchase.user.is_active === 0) { %>
                                <div>User unavailable (ID: <%= purchase.user.id %>)</div>
                                <div class="small text-muted">Contact: --</div>
                                <div class="small text-muted">Email: --</div>
                            <% } else { %>
                                <div><%= purchase.user.username %> (ID: <%= purchase.user.id %>)</div>
                                <div class="small text-muted">Contact: <%= purchase.user.contact || '--' %></div>
                                <div class="small text-muted">Email: <%= purchase.user.email || '--' %></div>
                            <% } %>
                            <div class="small text-muted">Payment: <%= purchase.paymentMethod || 'N/A' %></div>
                        </div>
                        <div class="text-end">
                            <div class="fw-bold">Purchase Date:</div>
                            <div><%= purchase.date?.toLocaleString ? purchase.date.toLocaleString() : purchase.date %></div>
                            <div class="fw-bold mt-2">Total: $<%= purchase.total.toFixed(2) %></div>
                            <% if (purchase.receipt_id) { %>
                                <div class="mt-2">
                                    <a class="btn btn-sm btn-outline-primary" href="/receipt/<%= purchase.receipt_id %>">View Receipt</a>
                                </div>
                                <% if ((purchase.refunded_amount || 0) > 0) { %>
                                    <div class="small text-muted mt-2">Amount refunded: $<%= purchase.refunded_amount.toFixed(2) %></div>
                                <% } else if (purchase.refundRequest && purchase.refundRequest.status === 'pending') { %>
                                    <div class="small text-muted mt-2">Refund requested: $<%= Number(purchase.refundRequest.amount || 0).toFixed(2) %></div>
                                    <div class="small text-muted mt-1">Review in Refund Requests page</div>
                                <% } else if (purchase.refundRequest && purchase.refundRequest.status === 'rejected') { %>
                                    <div class="small text-muted mt-2">Refund rejected</div>
                                <% } else if (purchase.refundRequest && purchase.refundRequest.status === 'approved') { %>
                                    <div class="small text-muted mt-2">Refund approved</div>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Qty</th>
                                    <th>Price (per item)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% purchase.items.forEach(item => { %>
                                    <tr>
                                        <td><%= item.productName %></td>
                                        <td><%= item.category %></td>
                                        <td><%= item.qty %></td>
                                        <td>$<%= item.price.toFixed(2) %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } %>
</div>
</body>
</html>
