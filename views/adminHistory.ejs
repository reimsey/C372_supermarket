<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Purchases</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@600;700&family=Work+Sans:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body>
<%- include('partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">All Purchase History</h2>
        <div class="text-muted">Admin view</div>
    </div>

    <% if (!purchases || purchases.length === 0) { %>
        <div class="alert alert-info">No purchases recorded yet.</div>
    <% } else { %>
        <% purchases.forEach(purchase => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div>
                            <div class="fw-bold">User:</div>
                            <div><%= purchase.user.username %> (ID: <%= purchase.user.id %>)</div>
                            <div class="small text-muted">Contact: <%= purchase.user.contact || '—' %></div>
                            <div class="small text-muted">Email: <%= purchase.user.email || '—' %></div>
                            <div class="small text-muted">Payment: <%= purchase.paymentMethod || 'N/A' %></div>
                        </div>
                        <div class="text-end">
                            <div class="fw-bold">Purchase Date:</div>
                            <div><%= purchase.date?.toLocaleString ? purchase.date.toLocaleString() : purchase.date %></div>
                            <div class="fw-bold mt-2">Total: $<%= purchase.total.toFixed(2) %></div>
                            <% if (purchase.receipt_id) { %>
                                <div class="mt-2">
                                    <a class="btn btn-sm btn-outline-primary" href="/receipt/<%= purchase.receipt_id %>">View Receipt</a>
                                </div>
                                <% if ((purchase.refunded_amount || 0) > 0) { %>
                                    <div class="small text-muted mt-2">Amount refunded: $<%= purchase.refunded_amount.toFixed(2) %></div>
                                <% } else { %>
                                    <form action="/wallet/refund" method="POST" class="mt-2">
                                        <input type="hidden" name="receipt_id" value="<%= purchase.receipt_id %>">
                                        <input type="hidden" name="note" value="Order refund">
                                        <button type="submit" class="btn btn-sm btn-outline-warning">Refund to Wallet</button>
                                    </form>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Qty</th>
                                    <th>Price (per item)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% purchase.items.forEach(item => { %>
                                    <tr>
                                        <td><%= item.productName %></td>
                                        <td><%= item.category %></td>
                                        <td><%= item.qty %></td>
                                        <td>$<%= item.price.toFixed(2) %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } %>
</div>
</body>
</html>
