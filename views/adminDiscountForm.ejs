<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= isEdit ? 'Edit' : 'Create' %> Voucher</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-4">
    <h2 class="mb-3"><%= isEdit ? 'Edit' : 'Create' %> Voucher</h2>

    <% if (errors && errors.length) { %>
      <div class="alert alert-danger"><%= errors[0] %></div>
    <% } %>
    <% if (messages && messages.length) { %>
      <div class="alert alert-success"><%= messages[0] %></div>
    <% } %>

    <form action="<%= isEdit ? '/admin/discounts/' + form.id : '/admin/discounts' %>" method="POST">
      <div class="row g-3">
        <div class="col-md-4">
          <label class="form-label">Voucher Amount</label>
          <input name="discount_value" type="number" step="0.01" min="0" class="form-control" required value="<%= form.discount_value || '' %>">
        </div>
        <div class="col-md-4">
          <label class="form-label">Minimum Spend</label>
          <input name="min_spend" type="number" step="0.01" min="0" class="form-control" value="<%= form.min_spend || '' %>">
        </div>
        <div class="col-md-4">
          <label class="form-label">Starts At</label>
          <input name="starts_at" type="datetime-local" class="form-control" value="<%= form.starts_at ? new Date(form.starts_at).toISOString().slice(0,16) : '' %>">
        </div>
        <div class="col-md-4">
          <label class="form-label">Expires At</label>
          <input name="expires_at" type="datetime-local" class="form-control" value="<%= form.expires_at ? new Date(form.expires_at).toISOString().slice(0,16) : '' %>">
        </div>
        <div class="col-md-4">
          <label class="form-label">Terms & Conditions</label>
          <input name="description" class="form-control" value="<%= form.description || '' %>">
        </div>
        <div class="col-12">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="is_active" id="is_active" value="1" <%= form.is_active !== 0 ? 'checked' : '' %>>
            <label class="form-check-label" for="is_active">Active</label>
          </div>
        </div>

        <input type="hidden" name="scope" value="general">
      </div>

      <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary"><%= isEdit ? 'Save Changes' : 'Create Voucher' %></button>
        <a href="/admin/discounts" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>

</body>
</html>
