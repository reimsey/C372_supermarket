<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@600;700&family=Work+Sans:wght@400;500;600&display=swap" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet">
  <title>Supermarket App</title>
</head>
<body>
<%- include('partials/header', { user: user, showHelp: true }) %>

    <div class="container">
        <div class="text-center my-4">
            <% if (user) {%>
              <% if (user.role === "admin") { %>
                <p class="lead mb-1">Welcome back, <%= user.username %>!</p>
                <p>Head to your <a href="/inventory">inventory</a> to manage products.</p>
              <% } else { %>
                <p class="lead mb-1">Welcome back, <%= user.username %>!</p>
                <p>Continue <a href="/shopping">shopping</a> for more items.</p>
              <% } %>
            <% } else { %>
              <h2 class="mb-2">Welcome to Jolin's Supermarket</h2>
              <p class="lead">Preview what's in store. Log in or sign up to shop.</p>
              <div class="d-flex justify-content-center gap-3 mt-3">
                <a href="/login" class="btn btn-primary">Login</a>
                <a href="/register" class="btn btn-outline-secondary">Sign Up</a>
              </div>
            <% } %>
        </div>

        <% if (!user) { %>
        <div class="card p-3 mb-4">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="mb-0">Featured Products</h5>
            <small class="text-muted">Login to see details and buy</small>
          </div>
          <div class="row g-3">
            <% if (previewProducts && previewProducts.length) { %>
              <% previewProducts.forEach(function(prod) { %>
                <div class="col-12 col-sm-6 col-lg-4">
                  <div class="card h-100">
                    <img src="/images/<%= prod.image %>" class="card-img-top" alt="<%= prod.productName %>" style="height: 180px; object-fit: cover;">
                    <div class="card-body">
                      <h6 class="card-title"><%= prod.productName %></h6>
                      <div class="d-flex justify-content-between align-items-center mb-1">
                        <span class="pill"><%= prod.category || 'Category' %></span>
                        <span class="fw-semibold">$<%= Number(prod.price).toFixed(2) %></span>
                      </div>
                      <a href="/login" class="stretched-link text-decoration-none text-muted" onclick="alert('Please log in or sign up to view details.'); return true;">View details</a>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <div class="col-12"><p class="text-muted mb-0">No products to show yet.</p></div>
            <% } %>
          </div>
        </div>
        <% } %>
    </div>
</body>
</html>
