<!DOCTYPE html>
<html>
<head>
    <title>Purchase History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@600;700&family=Work+Sans:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body>

    <%- include('partials/header') %>

    <div class="container mt-4">
        <h2>Purchase History</h2>

        <% if (!purchases || purchases.length === 0) { %>
            <!-- Show this if user has never purchased anything -->
            <p>You have no purchases yet.</p>
        <% } else { %>
            <% purchases.forEach(function(purchase) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <div class="fw-bold">Purchase Date:</div>
                                <div><%= purchase.date.toLocaleString ? purchase.date.toLocaleString() : purchase.date %></div>
                                <div class="small text-muted">Payment: <%= purchase.paymentMethod || 'N/A' %></div>
                                <div class="small text-muted">Status: <%= purchase.status === 'delivered' ? 'Delivered' : (purchase.status === 'completed' ? 'Completed' : 'Processing') %></div>
                                <% if (purchase.receipt_id) { %>
                                    <div class="small"><a href="/receipt/<%= purchase.receipt_id %>">View Receipt</a></div>
                                <% } %>
                            </div>
                            <div class="text-end">
                                <div class="fw-bold">Total:</div>
                                <div>$<%= purchase.total.toFixed(2) %></div>
                                <% if (purchase.status === 'delivered') { %>
                                    <form action="/purchase/received" method="POST" class="mt-2">
                                        <input type="hidden" name="receipt_id" value="<%= purchase.receipt_id %>">
                                        <button type="submit" class="btn btn-sm btn-outline-success">Order Received</button>
                                    </form>
                                <% } %>
                                <% if (purchase.status === 'completed') { %>
                                    <% if ((purchase.refunded_amount || 0) > 0) { %>
                                        <div class="small text-muted mt-2">Refunded: $<%= purchase.refunded_amount.toFixed(2) %></div>
                                    <% } else if (purchase.refundRequest && purchase.refundRequest.status === 'pending') { %>
                                        <div class="small text-muted mt-2">Refund requested (pending)</div>
                                    <% } else if (purchase.refundRequest && purchase.refundRequest.status === 'rejected') { %>
                                        <div class="small text-muted mt-2">Refund rejected</div>
                                    <% } else if (purchase.refundRequest && purchase.refundRequest.status === 'approved') { %>
                                        <div class="small text-muted mt-2">Refund approved</div>
                                    <% } else { %>
                                        <form action="/refunds/request" method="POST" class="mt-2">
                                            <input type="hidden" name="receipt_id" value="<%= purchase.receipt_id %>">
                                            <div class="mb-2">
                                                <input type="text" name="reason" class="form-control form-control-sm" placeholder="Reason for refund">
                                            </div>
                                            <button type="submit" class="btn btn-sm btn-outline-warning">Request Refund</button>
                                        </form>
                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                        <table class="table mb-0 table-sm">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Quantity</th>
                                    <th>Price (per item)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% purchase.items.forEach(function(item) { %>
                                    <tr>
                                        <td><%= item.productName %></td>
                                        <td><%= item.category %></td>
                                        <td><%= item.qty %></td>
                                        <td>$<%= item.price.toFixed(2) %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

