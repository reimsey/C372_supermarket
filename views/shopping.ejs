<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@600;700&family=Work+Sans:wght@400;500;600&display=swap" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet">
  <title>Supermarket App</title>
</head>
<body>
<%- include('partials/header') %>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>Products from Supermarket</h2></div>
    <br>
    <div id="cartAlert" class="alert alert-success d-none" role="alert"></div>
    <div class="row mb-3 g-3 align-items-end">
      <div class="col-md-4">
        <label for="categoryFilter" class="form-label fw-semibold">Filter by Category</label>
        <select id="categoryFilter" class="form-select">
          <option value="all" selected>All</option>
          <% (categories || []).forEach(function(cat) { %>
            <option value="<%= cat.name.toLowerCase() %>"><%= cat.name %></option>
          <% }); %>
        </select>
      </div>
      <div class="col-md-4">
        <label for="productSearch" class="form-label fw-semibold">Search by Name</label>
        <input type="text" id="productSearch" class="form-control" placeholder="Search products...">
      </div>
    </div>
    <div class="row g-3">
      <% for(let i=0; i < products.length; i++) { %>
        <div class="col-6 col-md-4 col-lg-3 product-card" data-category="<%= (products[i].category || 'uncategorized').toLowerCase() %>" data-name="<%= products[i].productName.toLowerCase() %>">
          <div class="card h-100">
            <img src="images/<%= products[i].image %>" class="card-img-top" alt="<%= products[i].productName %>" style="height: 160px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h6 class="card-title"><a href="/product/<%= products[i].id %>"><%= products[i].productName %></a></h6>
              <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="pill"><%= products[i].category || 'Others' %></span>
                <span class="fw-semibold">$<%= products[i].price.toFixed(2) %></span>
              </div>
              <p class="mb-2 small text-muted">In stock: <%= products[i].quantity %></p>
              <div class="mt-auto">
                <div class="input-group input-group-sm mb-2">
                  <label class="input-group-text" for="quantity-<%= products[i].id %>">Qty</label>
                  <select class="form-select" data-qty>
                    <% for (let q = 1; q <= 5; q++) { %>
                      <option value="<%= q %>"><%= q %></option>
                    <% } %>
                  </select>
                </div>
                <div class="d-grid gap-2">
                  <button type="button" class="btn btn-outline-primary js-add-to-cart" data-product-id="<%= products[i].id %>">Add to cart</button>
                  <form action="/buy-now" method="POST" class="js-buy-now">
                    <input type="hidden" name="productId" value="<%= products[i].id %>">
                    <input type="hidden" name="qty" value="1">
                    <button type="submit" class="btn btn-primary">Buy now</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
  <script>
    (function() {
      const select = document.getElementById('categoryFilter');
      const search = document.getElementById('productSearch');
      const cards = Array.from(document.querySelectorAll('.product-card'));

      function applyFilters() {
        const categoryValue = (select.value || 'all').toLowerCase();
        const searchValue = (search.value || '').toLowerCase().trim();
        cards.forEach(card => {
          const cat = card.getAttribute('data-category') || 'uncategorized';
          const name = card.getAttribute('data-name') || '';
          const categoryMatch = categoryValue === 'all' || cat === categoryValue;
          const searchMatch = !searchValue || name.includes(searchValue);
          card.style.display = (categoryMatch && searchMatch) ? '' : 'none';
        });
      }

      select.addEventListener('change', applyFilters);
      search.addEventListener('input', applyFilters);
      const alertBox = document.getElementById('cartAlert');

      const showAlert = (message, isError) => {
        if (!alertBox) return;
        alertBox.textContent = message;
        alertBox.classList.remove('d-none', 'alert-danger', 'alert-success');
        alertBox.classList.add(isError ? 'alert-danger' : 'alert-success');
        setTimeout(() => alertBox.classList.add('d-none'), 3000);
      };

      document.querySelectorAll('.js-add-to-cart').forEach((button) => {
        button.addEventListener('click', async () => {
          const card = button.closest('.product-card');
          const productId = button.getAttribute('data-product-id');
          const qtySelect = card ? card.querySelector('select[data-qty]') : null;
          const qty = qtySelect ? qtySelect.value : '1';
          try {
            const response = await fetch(`/add-to-cart/${productId}`, {
              method: 'POST',
              headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
              body: new URLSearchParams({ quantity: qty })
            });
            if (!response.ok) throw new Error('Unable to add to cart');
            showAlert('Added to cart.', false);
          } catch (error) {
            showAlert('Failed to add to cart.', true);
          }
        });
      });

      document.querySelectorAll('.js-buy-now').forEach((form) => {
        form.addEventListener('submit', () => {
          const card = form.closest('.product-card');
          const qtySelect = card ? card.querySelector('select[data-qty]') : null;
          const qty = qtySelect ? qtySelect.value : '1';
          const qtyInput = form.querySelector('input[name="qty"]');
          if (qtyInput) qtyInput.value = qty;
        });
      });
    })();
  </script>
</body>
</html>
